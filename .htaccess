RewriteEngine on

RewriteRule ^([a-z]+).html$ /index.php?page=$1 [L]

RewriteRule ^([0-9]+)$ /image_bibliotheque.php?largeur=$1 [L]
RewriteRule ^([0-9]+)x([0-9]+)$ /image_bibliotheque.php?largeur=$1&hauteur=$2 [L]

RewriteRule ^i([0-9]+)$ /image_id.php?id=$1 [L]
RewriteRule ^i([0-9]+)/([0-9]+)$ /image_id.php?id=$1&largeur=$2 [L]
RewriteRule ^i([0-9]+)/([0-9]+)x([0-9]+)$ /image_id.php?id=$1&largeur=$2&hauteur=$3 [L]
